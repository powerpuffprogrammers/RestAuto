package databaseA;

public class Employee {
	
	//Name of employee
	private String name;
	//Unique ID of employee
	private short id;
	//Char to describe employees position: w=waiter, h=host, c=chef, m=manager, o=owner
	private char position;
	
	//Create a new employee
	public Employee(String name, short id, char position){
		this.name= name;
		this.id=id;
		this.position=position;
	}
	
	public boolean changeName(String newName){
		if(newName!=null){
			
			return true;
		}
		return false;
	}
	
	public boolean changePosition(char newPosition){
		char[] possiblePositions = {'w','h','c','m','o'};
		for(int i =0;i<possiblePositions.length;i++){
			if(newPosition == possiblePositions[i]){
				this.position=newPosition;
				//updateSQLDatabase();
				return true;
			}
		}
		return false;
	}

	public String getName(){
		return this.name;
	}
	
	public short getID(){
		return this.id;
	}
	
	public char getPosition(){
		return this.position;
	}
}
